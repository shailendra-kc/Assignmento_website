<script>
  $( document ).ready(function() {
   $('#ajax_pre_loading').hide();
   $('#ass-head').hide();
    $('#load_more').hide();
  // SUBMIT FORM

    $("#pdf_search").submit(function(event) {
    // Prevent the form from submitting via the browser.
    $('#ass-head').show();
    event.preventDefault();
    ajaxPost();
  });
    
    
    function ajaxPost(){
      
      // PREPARE FORM DATA
      var formData = {
        link : $("#link").val()
       
      }
      
      // DO POST
      $.ajax({
  method: 'POST',
  contentType : "application/json",
  url:'/find_pdfs',
  data :JSON.stringify(formData),
  dataType : 'json',
  beforeSend: function() { $('#ajax_pre_loading').show(); },
  success: function(res) {
            $('#ajax_pre_loading').hide();
            $('#my_table').hide();
          
    var assignments = res.data;
    var body = [];
if(assignments.length>0)
{
  
assignments.forEach(function(assignment) {
      var tr = $('<tr/>');
      tr.append($('<td/>').html(assignment.chapter));
      tr.append($('<td/>').html( assignment.topic ));
       tr.append($('<td/>').html( assignment.name));
         tr.append($('<td/>').html('<a href="'+assignment.drive_link+'">Link</a>'));
    
      body.push(tr);
    });
 $('table.assignment-table').find('tbody').html(body);
  $('#load_more_link').attr('href','/find_all_pdfs?link='+formData.link);
   $('#load_more').show();

 
}
 else
 {
   $('table.assignment-table').find('tbody').html("no record found");
 }   

   
  }
})
      
      // Reset FormData after Posting
      resetData();
 
    }
    
    function resetData(){
      $("#link").val("");
      
    }
})
</script>